<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ubi.erp.user.dao.SysDao">

	<resultMap id="SysMap" type="Sys"/>

	<select id="selSys" statementType="CALLABLE">
		{call SP_SEL_SYS(#{rst, mode=OUT, jdbcType=CURSOR, resultMap=SysMap, javaType=ResultSet})}
	</select>
  
  	<!--select id="selSys" resultType="Sys">
    	<![CDATA[
        SELECT 
			SYS_CD,
			SYS_NM,
			VIEW_IDX,
			USE_YN,
			TO_CHAR(CREATE_DATE, 'YYYY-MM-DD HH24:MI') STR_CDATE,
			CREATOR || '(홍길동)' STR_CUSER
		FROM 
			PO_SYS_MT
		ORDER BY VIEW_IDX
		]]>
  	</select-->
  	
  	<select id="getSys" resultType="Sys">
  		<![CDATA[
        SELECT 
			SYS_CD,
			SYS_NM,
			VIEW_IDX,
			USE_YN,
			CREATE_DATE,
			CREATOR
		FROM 
			TBL_SYS_MT
  		WHERE
  			SYS_CD = #{sysCd}
		]]>
  	</select>
  	
  	<insert id="insSys" parameterType="Sys">
  		<![CDATA[
        INSERT INTO TBL_SYS_MT(
        	SYS_CD, 
        	SYS_NM, 
        	VIEW_IDX,
        	USE_YN, 
        	CREATE_DATE, 
        	CREATOR, 
        	EDIT_DATE, 
        	EDITOR) 
  		VALUES(
  			#{sysCd}, 
  			#{sysNm}, 
  			#{viewIdx}, 
  			#{useYn}, 
  			SYSDATE, 
  			#{creator}, 
  			SYSDATE, 
  			#{creator}
  		)
		]]>
  	</insert>
  	
  	<update id="updSys" parameterType="Sys">
  		<![CDATA[
        UPDATE TBL_SYS_MT SET 
  			SYS_NM = #{sysNm}, 
  			VIEW_IDX = #{viewIdx},
  			USE_YN = #{useYn}, 
  			EDIT_DATE = SYSDATE,
  			EDITOR = #{editor}
  		WHERE
  			SYS_CD = #{sysCd}
		]]>
  	</update>
  	
  	<update id="delSys" parameterType="Sys">
  		<![CDATA[
  		DELETE FROM TBL_SYS_MT 
  		WHERE
  			SYS_CD = #{sysCd}
        ]]>
  	</update>
  	
</mapper>