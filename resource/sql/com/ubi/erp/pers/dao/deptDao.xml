<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ubi.erp.pers.dao.DeptDao">

	<resultMap id="DeptMap" type="Dept"/>
	
 	<select id="selDept" statementType="CALLABLE">
		 {call SP_PERS_DEPTS_SCH(#{compId},#{postCode},#{postName},#{o_cursor, mode=OUT, jdbcType=CURSOR, resultMap=DeptMap, javaType=ResultSet})}	
	</select>
 
  	<insert id="crudDept" statementType="CALLABLE" parameterType="Dept">
  		{call SP_PERS_DEPTS_SAVE(#{cudKey},#{compId},#{postCode},#{stDate},#{endDate},#{postName},#{costKind},#{sysEmpNo},#{postNameMst})}	
  	</insert>
  	
  	<select id="selDeptCode" statementType="CALLABLE">
		 {call SP_PERS_DEPTS_SCH1(#{compId},#{postName},#{o_cursor, mode=OUT, jdbcType=CURSOR, resultMap=DeptMap, javaType=ResultSet})}	
	</select>

</mapper>
